<domain type='kvm'>
  <name><%= name %></name>
  <uuid><%= uuid %></uuid>
  <memory><%= memory %></memory>
  <vcpu><%= cpus || 1 %></vcpu>
  <os>
    <type arch="<%= @mvi.arch %>">hvm</type>
  </os>
  <clock sync="localtime"/>
  <devices>
    <disk type='file' device='disk'>
      <source file='<%= root_disk_image %>'/>
      <target dev='hda'/>
    </disk>
      <interface type='bridge'>
        <source bridge='br0'/>
        <target dev='vnet0'/>
        <model type='e1000'/>
      </interface>
    <graphics type='vnc' port='-1' keymap='en'/>
  </devices>
</domain>